{
  "compilerOptions": {
    "lib": [
      "ES2015"
    ],
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "mocha"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.spec.ts"
  ]
}
